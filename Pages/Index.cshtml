@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1>@Model.itemCount products</h1>
    <div class="product-grid">
        @foreach (var product in Model.products)
        {
            <div class="product-grid-item" onclick="window.location.pathname = 'products/@product.Id'">
                @foreach (var image in product.Images)
                {
                    <img src="@image">
                }

                <p>@product.Name</p>
                <p>@product.Description</p>
                <p>@product.Price</p>
            </div>
        }
    </div>
</div>
